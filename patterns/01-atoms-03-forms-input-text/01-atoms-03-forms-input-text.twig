<label for="{{ inputText.id }}">{{inputText.labelText}}</label>
<input 
  class="{{ inputText.required ? 'js-is-required' : ''}}" 
  name="{{ inputText.name }}" 
  id="{{ inputText.id }}" 
  type="text" 
  placeholder="{{ inputText.placeholder }}" 
  data-type="text"
  {{ inputText.required ? 'required' : '' }} />